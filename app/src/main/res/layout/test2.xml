<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/item"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/base_list_title_style"
            android:textSize="12.0sp"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2132132132"
            android:singleLine="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/host_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_alignParentLeft="true">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/host_logo"
                android:layout_width="46.0dip"
                android:layout_height="46.0dip"
                android:src="@color/colorPrimary"
                android:scaleType="fitCenter" />
            <TextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="16662113"
                android:maxLength="4" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/visit_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/visit_logo"
                android:layout_width="46.0dip"
                android:layout_height="46.0dip"
                android:src="@color/colorAccent"
                android:scaleType="fitCenter" />
            <TextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="13131"
                android:maxLength="4" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_alignTop="@id/host_zone"
            android:layout_centerInParent="true">
            <TextView
                android:gravity="center"
                android:id="@+id/score"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="46.0dip"
                android:text="13113131"
                android:singleLine="true" />
            <TextView
                android:gravity="bottom"
                android:id="@+id/date"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="23.0dip"
                android:text="2121313" />
            <TextView
                android:gravity="top"
                android:id="@id/time"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="23.0dip"
                android:text="2132131" />
            <TextView
                android:textColor="@color/colorPrimary"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/state"
                android:background="@color/colorAccent"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1131321"
                android:singleLine="true" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>