<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小编只能帮你到这里叻"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:id="@+id/ll_photoset"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/tv_title">

        <ImageView
            android:id="@+id/iv_photo_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_about_netease"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_photo_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_about_netease"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_photo_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_about_netease"
            android:layout_weight="1"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/ll_photoset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <TextView
            android:id="@+id/tv_tname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="要闻"/>
        <TextView
            android:id="@+id/tv_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.8万跟帖"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>