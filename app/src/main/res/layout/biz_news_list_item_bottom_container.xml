<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/show_special_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:id="@+id/top_divider"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />

        <RelativeLayout
            android:id="@+id/enter_special_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/enter_special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="6.0dip"
                android:drawableRight="@drawable/biz_news_list_arrow"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:text="465464645"
                android:textColor="@color/colorPrimary"
                android:textSize="15.0sp" />
        </RelativeLayout>

        <include
            android:id="@+id/bottom_divider"
            layout="@layout/biz_news_normal_reconmend_list_item_divider_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/read_recommend_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5.0dip"
        android:visibility="visible">

        <TextView
            android:id="@+id/update_divider_view_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="12115131"
            android:textColor="@color/colorAccent"
            android:textSize="12.0sp" />

        <RelativeLayout
            android:id="@+id/update_divider_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip">

            <TextView
                android:id="@+id/update_refresh_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3.0dip"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingBottom="3.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="3.0dip"
                android:text="54646"
                android:textColor="@color/colorPrimary"
                android:textSize="12.0sp" />

            <View
                android:id="@+id/update_divider_view_left_line"
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@id/update_refresh_view_text"
                android:background="@color/colorAccent" />

            <View
                android:id="@+id/update_divider_view_right_line"
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@id/update_refresh_view_text"
                android:background="@color/colorPrimary" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>