<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/perfect_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/biz_about_netease"/>
        <TextView
            android:ellipsize="end"
            android:gravity="top|left|center"
            android:id="@+id/title"
            android:paddingTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@id/img"
            android:layout_alignTop="@id/img"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/desc"
            android:paddingBottom="0.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:maxLines="2"
            android:minLines="2"
            android:layout_below="@id/title"
            android:layout_alignLeft="@id/title"
            android:lineSpacingExtra="10dp"/>
        <RelativeLayout
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/desc"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tag"
                android:paddingLeft="1.0dip"
                android:paddingRight="1.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:text="123121"/>
            <TextView
                android:id="@+id/tag_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3.0dip"
                android:singleLine="true"
                android:layout_toLeftOf="@id/tag"
                android:text="123121"/>
        </RelativeLayout>
    </RelativeLayout>
    <ViewStub
        android:id="@+id/bottom_stub"
        android:visibility="visible"
        android:layout="@layout/biz_news_list_item_bottom_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>